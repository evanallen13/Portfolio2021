
@{
    ViewData["Title"] = "ContactForm";
    <link rel="stylesheet" href="../css/ContactForm.css">
    <script src="~/js/ContactForm.js"></script>
}

<div id="contactFormDiv">
    <h1 class="display-4">Contact Me</h1>
    <form>
        <div class="form-group">
            <label for="inputFullname">Full Name:</label>
            <input type="text" class="form-control" id="exampleInputFullname" placeholder="Full Name">
        </div>
        <div class="form-group">
            <label for="inputEmail">Email Address:</label>
            <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email">
        </div>
        <div class="form-group">
            <label for="inputMessage">Message:</label>
            <textarea class="form-control" id="exampleInputMessage" rows="3"></textarea>
        </div>

        <button type="button" class="btn btn-primary" onclick="formSubmit()">Submit</button>
    </form>
    
</div>

